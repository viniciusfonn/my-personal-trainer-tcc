{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"removeComments": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"rootDir": "./src",
		"paths": {
			"@config/*": [
				"./src/config/*"
			],
			"@modules/*": [
				"./src/modules/*"
			],
			"@shared/*": [
				"./src/shared/*"
			]
		}
	}
}
